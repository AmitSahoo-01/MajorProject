<% layout("/layouts/boilerplate") %>

<div class="row">
    <div class="col-8 offset-2" > 

        <br><br>

    <h3>Edit The Listing</h3>

    <form  method="post" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">


        <div class="mb-3 ">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" value="<%=listing.title%>" class="form-control" required >
            <div class="valid-feedback"> Title looks good</div>
        </div>

        <div class="mb-3 ">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" type="text" class="form-control" required value="<%=listing.description%>"><%=listing.description%></textarea>
            <div class="invalid-feedback">Please give a shorter description</div>
        </div>

        <div class="mb-3 ">
            Original Listing Image <br>
           <img src="<%= originalImgUrl %>" alt="img" class="edit-img">
        </div>

        <div class="mb-3 ">
            <label for="image" class="form-label">Upload new Image </label>
            <input type="file" name="listing[image]"  class="form-control"  >
        </div>

        <div class="row">
            <div class="mb-3  col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="text" name="listing[price]" class="form-control" required value="<%=listing.price%>" >
            <div class="invalid-feedback">Price should be required</div>
        </div>

        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" required class="form-control" value="<%=listing.country%>" >
            <div class="invalid-feedback">Country should be required</div>
        </div>

        </div>
        

        <div class="mb-3 ">
            <label for="location" class="form-label">Location</label>
            <input type="text" required name="listing[location]" class="form-control"  value="<%=listing.location%>" >
            <div class="invalid-feedback">Location should be required</div>
        </div>
        
        <button class="btn btn-dark add-btn ">Edit</button>
        <br><br>
    </form>
    </div>
</div>
